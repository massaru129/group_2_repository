<% if @subject.blackboards.blank? %>
  <%= form_for [@subject, @subject.blackboards.build], html:{multipart:true} do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
 
    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.label :material %><br>
      <%= f.file_field :material %>
    </p>
 
    <p>
      <%= f.submit %>
    </p>

<% else %>
  <%= form_for [@subject, @subject.blackboards.find(params[:id])], html:{multipart:true} do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
 
    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.label :material %><br>
      <%= f.file_field :material %>
    </p>
 
    <p>
      <%= f.submit %>
    </p>
  <% end %>
<% end %>
