<%= form_for @subject do |f| %>
  <% if @subject.errors.any? %>
  <div id="error_explanation">
    <h2>入力内容が適切ではありません。</h2>
    <ul>
    <% @subject.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <br>
  <p>
    <%= f.label :subject_name , "科目名" %>
    <%= f.text_field :subject_name %>
  </p>
 
  <p>
    <%= f.label :teacher , "教員" %>
    <%= f.text_field :teacher %>
  </p>

  <p>
    <%= f.label :day_of_a_week , "曜日" %>
    <%= f.collection_select :day_of_a_week, DayOfAWeek.all, :day_of_a_week, :day_of_a_week %>
  <p>
  
  <p>
    <%= f.label :period , "時限" %>
    <%= f.collection_select :period, Period.all, :period, :period %>
  <p>
  
  <p>
    <%= f.label :semester , "学期" %>
    <%= f.collection_select :semester, Semester.all, :semester, :semester %>
  <p>
  
  <p>
    <%= f.label :description, "説明" %>
    <%= f.text_area :description %>
  <p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
